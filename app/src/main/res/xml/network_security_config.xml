<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Disable cleartext (HTTP) traffic for all domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Domain-specific configuration for Jikan API -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.jikan.moe</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
        <!-- Certificate pinning is handled in OkHttp for more flexibility -->
    </domain-config>
    
    <!-- Allow localhost for debug builds (useful for local testing) -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="user" />
            <certificates src="system" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>
